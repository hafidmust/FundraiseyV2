<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.binar.synrgy.android.finalproject">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_avatar"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_union"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalProject">
        <activity
            android:name=".ui.homenavigation.home.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".ui.loan.LoanDetailsActivity"
            android:exported="true"/>

        <activity
            android:name=".ui.homenavigation.history.detail.DetailHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.homenavigation.HomeNavigationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.payment.detail.DetailPaymentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Splashscreen"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".ui.payment.PaymentActivity"
            android:exported="false"/>

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".FirebaseMessageReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>
</manifest>

