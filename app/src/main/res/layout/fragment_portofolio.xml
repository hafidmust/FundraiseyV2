<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_portofolio"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/blue_primary"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/view_portofolio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_portofolio"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="18dp"
        app:layout_constraintTop_toTopOf="@id/view_portofolio"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_avatar"
        app:layout_constraintBottom_toBottomOf="@id/view_portofolio" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview_portofolio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/app_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_portofolio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <!-- total balance box -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_tot_balance"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="170dp">

                <TextView
                    android:id="@+id/text_porto_tot_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/total_balance"
                    android:textColor="@color/blue_primary"
                    android:textSize="20sp"
                    android:fontFamily="@font/inter_bold"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tot_balance_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/value_current_balance"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter_bold"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_porto_tot_balance" />

                <TextView
                    android:id="@+id/tot_slash_balance_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/slash"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter_bold"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/tot_balance_screen"
                    app:layout_constraintTop_toBottomOf="@id/text_porto_tot_balance" />


                <TextView
                    android:id="@+id/tot_need_balance_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/value_total_withdran"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toRightOf="@id/tot_slash_balance_screen"
                    app:layout_constraintTop_toBottomOf="@id/text_porto_tot_balance" />

                <Button
                    android:id="@+id/button_withdraw"
                    android:layout_width="368dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/blue_primary"
                    android:text="@string/button_withdraw"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"
                    android:textAllCaps="false"
                    app:layout_constraintCircleRadius="4dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tot_need_balance_screen" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_porto_detail"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                app:layout_constraintTop_toBottomOf="@id/card_tot_balance">

                <TextView
                    android:id="@+id/text_porto_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/port_detail"
                    android:textColor="@color/blue_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_tot_with"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/tot_with"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_porto_detail" />

                <TextView
                    android:id="@+id/text_tot_fund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/tot_fund"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"

                    app:layout_constraintTop_toBottomOf="@id/text_tot_with" />

                <TextView
                    android:id="@+id/text_up_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/upcoming_ret"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_tot_fund" />

                <TextView
                    android:id="@+id/text_loan_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/loan_amount"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_up_return" />

                <TextView
                    android:id="@+id/text_dummy_10jt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:text="@string/value_total_withdran"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_porto_detail"
                    />

                <TextView
                    android:id="@+id/text_dummy_7jt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/value_current_balance"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_dummy_10jt" />

                <TextView
                    android:id="@+id/text_dummy_2jt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/value_upcoming_return"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_dummy_7jt" />

                <TextView
                    android:id="@+id/text_dummy_startup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tot_startup"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_dummy_2jt" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_loan_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card_porto_detail">

                <TextView
                    android:id="@+id/text_loan_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/blue_primary"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginStart="20dp"
                    android:text="@string/loan_detail"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_portofolio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:paddingBottom="50dp"
                    app:layout_constraintTop_toBottomOf="@id/text_loan_detail"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/adapter_recycler_portofolio"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@id/recycler_portofolio"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>