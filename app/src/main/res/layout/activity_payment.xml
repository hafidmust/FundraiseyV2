<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- header fundraisey -->
    <LinearLayout
        android:id="@+id/header_payment"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue_primary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="21dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/page_payment_screen"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Nominal amounts   -->
    <TextView
        android:id="@+id/text_nominal_amount_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/nominal_amount"
        android:textColor="@color/blue_primary"
        android:textFontWeight="700"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_payment" />

    <TextView
        android:id="@+id/text_nominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/nominal_text"
        android:textColor="@color/grey"
        android:textFontWeight="700"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_nominal_amount_page" />

    <EditText
        android:id="@+id/box_nominal"
        android:layout_width="350dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/box_rectangle_grey"
        android:hint="@string/hint_text_amount"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_nominal" />

    <GridLayout
        android:id="@+id/button_nominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20.25dp"
        android:columnCount="3"
        android:rowCount="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_nominal">

        <Button
            android:id="@+id/button_50k"
            android:layout_width="107dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:text="@string/fiftythousand"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/button_100k"
            android:layout_width="107dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:text="@string/onehundred"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/button_50k" />

        <Button
            android:id="@+id/button_200k"
            android:layout_width="108dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:text="@string/twohundred"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/button_100k" />

        <Button
            android:id="@+id/button_500k"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:text="@string/fivehundred"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/button_1000k"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/onemillion"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/button_50k" />

        <Button
            android:id="@+id/button_2000k"
            android:layout_width="108dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="@string/onehalfmillion"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/button_100k" />


    </GridLayout>

    <!--  Payment Method  -->
    <TextView
        android:id="@+id/text_payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:text="@string/payment_metode"
        android:textColor="@color/blue_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_nominal" />

    <RadioGroup
        android:id="@+id/text_bank_transfer"
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="21dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/box_rectangle_grey"
        android:elevation="3dp"
        android:outlineAmbientShadowColor="@color/light_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_payment_method">

        <TextView
            android:id="@+id/bank_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/bank_trans"
            android:textColor="@color/blue_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/grid_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:columnCount="2"
            android:orientation="vertical"
            android:rowCount="2">

            <ImageView
                android:id="@+id/logo_bca"
                android:layout_width="40dp"
                android:layout_height="13dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/bcaa" />

            <ImageView
                android:id="@+id/logo_mandiri"
                android:layout_width="40dp"
                android:layout_height="13dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/mandiri" />

            <RadioButton
                android:id="@+id/radio_bank_bca"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/bca"
                android:textSize="16sp"
                android:buttonTint="@color/blue_primary"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radio_bank_mandiri"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/mandiri"
                android:textSize="16sp"
                android:buttonTint="@color/blue_primary"/>

        </GridLayout>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/e_walet"
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="21dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/box_rectangle_grey"
        android:elevation="4dp"
        android:outlineAmbientShadowColor="@color/light_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_bank_transfer">

        <TextView
            android:id="@+id/text_e_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/e_wallet"
            android:textColor="@color/blue_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:columnCount="2"
            android:orientation="vertical"
            android:rowCount="2">


            <ImageView
                android:id="@+id/logo_gopay"
                android:layout_width="40dp"
                android:layout_height="13dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_gopay" />

            <ImageView
                android:id="@+id/logo_ovo"
                android:layout_width="40dp"
                android:layout_height="13dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_ovo" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="13dp"
                android:layout_row="0"
                android:fontFamily="@font/inter_regular"
                android:text="@string/gopay"
                android:textSize="16sp"
                android:buttonTint="@color/blue_primary"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/OVO"
                android:textSize="16sp"
                android:buttonTint="@color/blue_primary"/>

        </GridLayout>

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_pay"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/grid_recycler_home"
        android:backgroundTint="@color/blue_primary"
        android:fontFamily="@font/inter_regular"
        android:text="@string/pay_button"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/e_walet">

    </androidx.appcompat.widget.AppCompatButton>


</androidx.constraintlayout.widget.ConstraintLayout>