<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/app_name_header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue_primary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@id/app_name_header" />

        <ImageView
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_avatar"
            app:layout_constraintLeft_toLeftOf="@id/app_name" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview_faq"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/app_name_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/faq_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/scrollview_faq">

            <TextView
                android:id="@+id/text_faq_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/string_faq"
                android:textColor="@color/blue_primary"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_faq_1"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/box_rectangle_grey"
                android:fontFamily="@font/inter_regular"
                android:paddingLeft="23dp"
                android:paddingTop="19dp"
                android:paddingEnd="20.5dp"
                android:text="@string/faq_1"
                android:textColor="@color/blue_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:drawableRight="@drawable/ic_dropdown_faq"
                android:elevation="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_faq_top" />

            <TextView
                android:id="@+id/text_faq_2"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/box_rectangle_grey"
                android:fontFamily="@font/inter_regular"
                android:paddingLeft="23dp"
                android:paddingTop="19dp"
                android:paddingEnd="20.5dp"
                android:text="@string/faq_2"
                android:textColor="@color/blue_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:drawableRight="@drawable/ic_dropdown_faq"
                android:elevation="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_faq_1" />

            <TextView
                android:id="@+id/text_faq_3"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/box_rectangle_grey"
                android:fontFamily="@font/inter_regular"
                android:paddingLeft="23dp"
                android:paddingTop="19dp"
                android:paddingEnd="20.5dp"
                android:text="@string/faq_3"
                android:textColor="@color/blue_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:drawableRight="@drawable/ic_dropdown_faq"
                android:elevation="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_faq_2" />

            <TextView
                android:id="@+id/text_faq_bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/string_faq_bot"
                android:textColor="@color/blue_primary"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_faq_3" />

            <TextView
                android:id="@+id/text_faq_4"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/box_rectangle_grey"
                android:fontFamily="@font/inter_regular"
                android:paddingLeft="23dp"
                android:paddingTop="9dp"
                android:paddingEnd="20.5dp"
                android:text="@string/faq_4"
                android:textColor="@color/blue_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:drawableRight="@drawable/ic_dropdown_faq"
                android:elevation="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_faq_bot" />

            <TextView
                android:id="@+id/text_faq_5"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/box_rectangle_grey"
                android:fontFamily="@font/inter_regular"
                android:paddingLeft="23dp"
                android:paddingTop="9dp"
                android:paddingEnd="20.5dp"
                android:text="@string/faq_5"
                android:textColor="@color/blue_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:drawableRight="@drawable/ic_dropdown_faq"
                android:elevation="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_faq_4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/text_faq_not_answered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/your_question_faq"
        android:textColor="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollview_faq" />

    <Button
        android:id="@+id/button_contact_faq"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/blue_primary"
        android:fontFamily="@font/inter_regular"
        android:text="@string/button_faq"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_faq_not_answered" />

</androidx.constraintlayout.widget.ConstraintLayout>