<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        android:background="@color/colorGrey"
        android:fontFamily="@font/inter_bold"
        android:textFontWeight="700"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/blue_primary"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/nominall"
        android:layout_width="136dp"
        android:background="@color/colorGrey"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"

        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/hitam"/>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressFundingg"
        android:layout_marginHorizontal="25dp"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorGrey"
        android:layout_marginTop="6dp"

        app:layout_constraintTop_toBottomOf="@id/nominall"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tvTotalDonorr"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/progressFundingg"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorGrey"
        android:layout_marginTop="14dp"
        android:textSize="14sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/hitam"/>
    <TextView
        android:id="@+id/tvFundingAmountNominall"
        android:layout_width="58dp"
        android:background="@color/colorGrey"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvTotalDonorr"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tvlabelremainingg"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/progressFundingg"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorGrey"
        android:layout_marginTop="14dp"
        android:textSize="14sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/hitam"/>
    <TextView
        android:id="@+id/tvremainingdayy"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:background="@color/colorGrey"
        android:fontFamily="@font/inter_bold"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvlabelremainingg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tvLoanInformationn"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toBottomOf="@id/tvFundingAmountNominall"
        android:background="@color/colorGrey"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/blue_primary"
        android:textSize="18sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewloanappp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvLoanInformationn">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ic_logo_loaninformationn"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp"
                android:background="@color/colorGrey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/loanappp"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:background="@color/colorGrey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ic_logo_loaninformationn"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/startupcontentnamee"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:background="@color/colorGrey"
                app:layout_constraintLeft_toRightOf="@id/ic_logo_loaninformationn"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/loanappp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/inter_bold"
                android:textSize="20sp"
                android:textColor="@color/blue_primary"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="12dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_fundingneedd"
        app:layout_constraintTop_toBottomOf="@id/cardviewloanappp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/tvfundingneedd"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:background="@color/colorGrey"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:fontFamily="@font/inter_bold"
                android:textSize="20sp"
                android:textColor="@color/blue_primary"/>

            <TextView
                android:id="@+id/tvcontentaboutstartupp"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorGrey"

                android:fontFamily="@font/inter_regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvfundingneedd" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_aboutstartupp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview_fundingneedd"
        tools:layout_editor_absoluteX="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/tvAboutStartupp"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/colorGrey"
                android:fontFamily="@font/inter_bold"
                android:textColor="#A1887F"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDetailAboutStartupp"
                android:layout_width="274dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorGrey"
                android:fontFamily="@font/inter_regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAboutStartupp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
