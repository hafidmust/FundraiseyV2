<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/header_label"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue_primary"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/header_label"
        app:layout_constraintBottom_toBottomOf="@id/header_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_back_white"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/imgBack"
        android:text="Funding Detail"
        android:layout_marginLeft="37dp"
        android:fontFamily="@font/inter_bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/header_label"
        app:layout_constraintBottom_toBottomOf="@id/header_label"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_label"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">
            <TextView
                android:id="@+id/nameProjectFunding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="20dp"
                android:text="Project funding"
                android:fontFamily="@font/inter_bold"
                android:textFontWeight="700"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/blue_primary"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/nominal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/nameProjectFunding"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:text="Rp 5.000.000"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="20sp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/hitam"/>
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressFunding"
                android:layout_marginHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                app:indicatorColor="@color/blue_primary"
                android:layout_marginTop="6dp"
                android:progress="75"
                app:layout_constraintTop_toBottomOf="@id/nominal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tvFa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/progressFunding"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Total Donors"
                android:layout_marginTop="14dp"
                android:textSize="14sp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/hitam"/>
            <TextView
                android:id="@+id/tvFundingAmountNominal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="89 donors"
                android:fontFamily="@font/inter_bold"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvFa"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tvlabelremaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/progressFunding"
                android:layout_marginRight="20dp"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Remaining day"
                android:layout_marginTop="14dp"
                android:textSize="14sp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/hitam"/>
            <TextView
                android:id="@+id/tvremainingday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29 day left"
                android:fontFamily="@font/inter_bold"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvlabelremaining"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tvLoanInformation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFundingAmountNominal"
                android:text="Loan Information"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/blue_primary"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewloanapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/tvLoanInformation">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ic_logo_loaninformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="22dp"
                        android:src="@drawable/ic_google"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/loanapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loan Application"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/ic_logo_loaninformation"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="21dp"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/startupcontentname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Star Track.inc"
                        app:layout_constraintLeft_toRightOf="@id/ic_logo_loaninformation"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/loanapp"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="20sp"
                        android:textColor="@color/blue_primary"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_fundingneed"
                app:layout_constraintTop_toBottomOf="@id/cardviewloanapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/tvfundingneed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Funding Needs"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="20sp"
                        android:textColor="@color/blue_primary"/>
                    <TextView
                        android:id="@+id/tvcontentaboutstartup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvfundingneed"
                        android:layout_marginTop="8dp"
                        android:text="@string/content_funding_needs"
                        android:layout_marginHorizontal="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:fontFamily="@font/inter_regular"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_aboutstartup"
                app:layout_constraintTop_toBottomOf="@id/cardview_fundingneed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/tvAboutStartup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Startup"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="20sp"
                        android:textColor="@color/blue_primary"/>
                    <TextView
                        android:id="@+id/tvDetailAboutStartup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvAboutStartup"
                        android:layout_marginTop="8dp"
                        android:text="@string/content_aboutstartup"
                        android:layout_marginHorizontal="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:fontFamily="@font/inter_regular"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_addressstartup"
                        app:layout_constraintTop_toBottomOf="@id/tvDetailAboutStartup"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tvaddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="8dp"
                                android:text="Address"
                                android:layout_marginLeft="14dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:fontFamily="@font/inter_regular"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="8dp"
                                android:text="4rd Sudirman St., Jakarta"
                                android:layout_marginRight="16dp"
                                app:layout_constraintRight_toRightOf="parent"
                                android:fontFamily="@font/inter_regular"/>
                            <TextView
                                android:id="@+id/tvsince"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Since"
                                android:layout_marginLeft="14dp"
                                app:layout_constraintTop_toBottomOf="@id/tvaddress"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:fontFamily="@font/inter_regular"/>
                            <TextView
                                android:id="@+id/addressstartup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="8dp"
                                android:text="4rd Sudirman St., Jakarta"
                                android:layout_marginRight="16dp"
                                app:layout_constraintRight_toRightOf="parent"
                                android:fontFamily="@font/inter_regular"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/addressstartup"
                                android:layout_marginTop="8dp"
                                android:text="2019"
                                android:layout_marginRight="16dp"
                                app:layout_constraintRight_toRightOf="parent"
                                android:fontFamily="@font/inter_regular"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.recyclerview.widget.RecyclerView
                        app:layout_constraintTop_toBottomOf="@id/cardview_addressstartup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        tools:listitem="@layout/adapter_history_detail_image"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_contact"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/cardview_aboutstartup"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/tvContactLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="20sp"
                        android:textColor="@color/blue_primary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvContactLabel"
                        android:id="@+id/tvCweb"
                        android:text="Website"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintTop_toBottomOf="@id/tvContactLabel"
                        android:id="@+id/tvContentWeb"
                        android:text="www.starttrack.com"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvCweb"
                        android:id="@+id/tvCPhone"
                        android:text="Phone"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintTop_toBottomOf="@id/tvContentWeb"
                        android:id="@+id/tvContentPhone"
                        android:text="081234567890"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvCPhone"
                        android:id="@+id/tvclinkedin"
                        android:text="LinkedIn"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintTop_toBottomOf="@id/tvContentPhone"
                        android:id="@+id/tvContentLinkedin"
                        android:text="@string/startrack"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvclinkedin"
                        android:id="@+id/tvcinstagram"
                        android:text="Instagram"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintTop_toBottomOf="@id/tvContentLinkedin"
                        android:id="@+id/tvContentInstagram"
                        android:text="@string/startrack"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvcinstagram"
                        android:id="@+id/tvcfb"
                        android:text="Facebook"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintTop_toBottomOf="@id/tvContentInstagram"
                        android:id="@+id/tvContentfb"
                        android:text="@string/startrack"
                        app:layout_constraintRight_toRightOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/text_collected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/cardview_contact"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Collected"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/text_available_to_donate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/text_collected"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardview_contact"
                android:layout_marginStart="147dp"
                android:layout_marginTop="10dp"
                android:text="Available to Donate"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"
                android:textColor="@color/green"/>

            <TextView
                android:id="@+id/text_funding_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_collected"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:text="Rp. 3.045.000"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_bold"
                android:textSize="18sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_fund_now"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/grid_recycler_home"
                android:backgroundTint="@color/blue_primary"
                android:fontFamily="@font/inter_bold"
                android:text="Fund Now"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_funding_amount">

            </androidx.appcompat.widget.AppCompatButton>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>