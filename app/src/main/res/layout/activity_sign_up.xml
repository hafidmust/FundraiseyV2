<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signin.SignInActivity">

    <!-- header sign up -->
    <!--  layout format sign_up_header ini amna  -->

    <TextView
        android:id="@+id/sign_up_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/register"
        android:layout_marginLeft="48dp"
        android:textColor="@color/blue"
        android:textSize="25sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <EditText
        android:id="@+id/text_email"
        android:layout_width="318dp"
        android:layout_height="54dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"
        android:autofillHints="phone"
        android:background="@drawable/bg_text_box"
        android:fontFamily="@font/inter_regular"
        android:inputType="phone"
        android:paddingLeft="15dp"
        android:text="@string/email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_header"
        tools:ignore="LabelFor,TextFields" />

    <EditText
        android:id="@+id/password"
        android:layout_width="318dp"
        android:layout_height="54dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:autofillHints="password"
        android:background="@drawable/bg_text_box"
        android:fontFamily="@font/inter_regular"
        android:inputType="textVisiblePassword"
        android:paddingLeft="15dp"
        android:text="@string/password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_email"
        tools:ignore="LabelFor" />

    <!--  phone number  -->


    <EditText
        android:id="@+id/text_phone"
        android:layout_width="318dp"
        android:layout_height="54dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:autofillHints="phone"
        android:background="@drawable/bg_text_box"
        android:fontFamily="@font/inter_regular"
        android:inputType="phone"
        android:paddingLeft="15dp"
        android:text="@string/phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        tools:ignore="LabelFor" />

    <!--  gender  -->
    <RadioGroup
        android:id="@+id/radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/inter_regular"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_phone"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:layout_width="130dp"
            android:layout_height="54dp"
            android:background="@drawable/bg_text_box"
            android:button="@drawable/null_radio_button"
            android:elevation="4dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:text="@string/gender_male"
            android:textColor="@drawable/radio_text_selector" />

        <RadioButton
            android:layout_width="130dp"
            android:layout_height="54dp"
            android:layout_marginLeft="55dp"
            android:background="@drawable/radio_selector"
            android:button="@drawable/null_radio_button"
            android:elevation="4dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:text="@string/gender_female"
            android:textColor="@drawable/radio_text_selector" />
    </RadioGroup>


    <CheckBox
        android:id="@+id/checkbox_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/aggree"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/privacy"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/checkbox_privacy"
        app:layout_constraintTop_toBottomOf="@+id/radio_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_sign_in"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/bg_text_register"
        android:fontFamily="@font/inter_regular"
        android:text="@string/create"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkbox_privacy"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/have_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/have_an"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_sign_in"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/log_in_bot"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/have_an_account"
        app:layout_constraintTop_toBottomOf="@+id/button_sign_in" />


</androidx.constraintlayout.widget.ConstraintLayout>