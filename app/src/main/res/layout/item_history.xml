<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="20dp"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_history_start_up_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_bold"
            android:text="Project Funding"
            android:textColor="@color/blue_primary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_startupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_history_start_up_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/startrack"
            android:textColor="@color/hitam"
            android:textSize="14sp" />

        <TextView

            android:id="@+id/tv_nominal_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_startupname"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_bold"
            android:text="Rp. 500.000"
            android:textColor="@color/hitam"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_payment_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_nominal_history"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="Payment deadline"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nominal_history" />

        <TextView
            android:id="@+id/label_campaign_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_payment_deadline"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="Campaign deadline"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_payment_deadline" />


        <TextView
            android:id="@+id/tv_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nominal_history"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/inter_bold"
            android:text="@string/day_date"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tv_content_campaigndeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_deadline"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/inter_bold"
            android:text="Sunday, 19 Oct 2022"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_deadline"
            android:layout_alignParentRight="true"/>


        <TextView
            android:id="@+id/text_history_date"
            android:layout_width="126dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_content_campaigndeadline"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/box_rectangel_payment_history"
            android:paddingBottom="5dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="5dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
