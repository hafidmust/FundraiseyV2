<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_startup"
        android:layout_width="120dp"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:background="@color/colorGrey"
         />

    <TextView
        android:id="@+id/text_start_up_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/imageView_startup"
        android:fontFamily="@font/inter_medium"

        android:textColor="@color/blue_primary"
        android:textSize="16sp"
        android:background="@color/colorGrey"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_projectfunding"
        android:layout_width="150dp"
        android:background="@color/colorGrey"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_start_up_title"
        android:layout_marginStart="13dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/imageView_startup"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_total_donation"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_projectfunding"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/imageView_startup"
        android:fontFamily="@font/inter_regular"
        android:background="@color/colorGrey"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_total_donation"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/inter_regular"
        android:maxLines="2"
        android:background="@color/colorGrey"
        android:textColor="@color/grey"
        android:textSize="12sp" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/indicator_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:progress="70"

        android:background="@color/colorGrey"
        android:layout_below="@id/text_description"
         />

    <TextView
        android:id="@+id/text_colected"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/indicator_adapter"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorGrey"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text_amount_colected"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_colected"
        android:fontFamily="@font/inter_regular"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"

        android:background="@color/colorGrey"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text_deadline"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/indicator_adapter"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inter_regular"
        android:layout_marginRight="15dp"
        android:background="@color/colorGrey"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text_deadline_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_deadline"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/inter_regular"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorGrey"
        android:textColor="@color/black"
        android:textSize="12sp" />


</RelativeLayout>