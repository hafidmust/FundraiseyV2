<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/recycler_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/grid_recycler_history">

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/text_history_start_up_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_start_up"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:fontFamily="@font/inter_bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>
            <TextView

                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tv_startupname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/startrack"
                android:textColor="@color/hitam"
                android:textSize="14sp"
                android:fontFamily="@font/inter_bold"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/text_history_start_up_name"/>
            <TextView

                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tv_nominal_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 500.000"
                android:textColor="@color/hitam"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/tv_startupname"/>

            <TextView
                android:id="@+id/tv_payment_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment deadline"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tv_nominal_history"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/label_campaign_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campaign deadline"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tv_payment_deadline"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                />



            <TextView
                android:id="@+id/text_history_status_payment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/day_date"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_bold"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tv_nominal_history"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:id="@+id/tv_content_campaigndeadline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sunday, 19 Oct 2022"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_bold"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/text_history_status_payment"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                />


            <TextView
                app:layout_constraintTop_toBottomOf="@id/tv_content_campaigndeadline"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="13dp"
                android:id="@+id/text_history_date"
                android:layout_width="126dp"
                android:layout_height="25dp"
                android:background="@drawable/box_rectangel_payment_history"
                android:paddingHorizontal="12dp"
                android:paddingVertical="5dp"
                android:paddingBottom="5dp"
                android:text="@string/status"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>