<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.SkippedOnboardingActivity">

    <ImageView
        android:id="@+id/imageBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/tvGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/guest_login"
        android:layout_marginTop="48dp"
        android:layout_marginRight="24dp"
        android:fontFamily="@font/inter_bold"/>
    <ImageView
        android:id="@+id/imgOnboarding4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/onboarding4"
        android:layout_marginTop="88dp"/>

    <TextView
        android:id="@+id/startnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgOnboarding4"
        android:layout_marginTop="20dp"
        android:text="Starts Now"
        android:textSize="20sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/blue_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/startnow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Start investing in an easier way."
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_regular"
            android:textSize="14sp"
            android:textColor="#111111"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="24dp"
        style="?attr/materialButtonOutlinedStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:strokeColor="@color/blue_primary"
        android:textAllCaps="false"
        android:fontFamily="@font/inter_bold"
        android:text="Login"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegister"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textAllCaps="false"
        android:text="Register"/>


</androidx.constraintlayout.widget.ConstraintLayout>