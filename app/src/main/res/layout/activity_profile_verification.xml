<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/header_label"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue_primary"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrow_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/header_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/text_profile"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/header_label"
        app:layout_constraintLeft_toLeftOf="@id/arrow_back"
        app:layout_constraintTop_toTopOf="@id/header_label" />

    <!-- hellow fund raise   -->
    <LinearLayout
        android:id="@+id/section_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/blue_primary"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_label">

        <TextView
            android:id="@+id/text_total_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/text_fundraiser"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/email_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/text_username_email"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_total_balance" />

        <TextView
            android:id="@+id/email_username_bot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/text_username_email"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_username" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:visibility="gone"
        android:background="@color/blue_primary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/section_balance">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="12dp"
            android:background="@drawable/box_rectangle_fragment_home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="@string/progress"
                android:textColor="@color/progress_text"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/indicator_header"
                android:layout_width="305dp"
                android:layout_height="4dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="49dp"
                app:indicatorColor="@color/blue_primary"
                app:indicatorDirectionLinear="leftToRight"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_progress"
                app:trackColor="@color/blue_secondary" />

            <TextView
                android:id="@+id/text_registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="232dp"
                android:text="@string/regis"
                android:textColor="@color/progress_text"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/indicator_header" />

            <TextView
                android:id="@+id/text_verif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="63dp"
                android:layout_marginTop="9dp"
                android:text="@string/verif"
                android:textColor="@color/progress_text"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/text_registration"
                app:layout_constraintTop_toBottomOf="@id/indicator_header" />

            <TextView
                android:id="@+id/text_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="63dp"
                android:layout_marginTop="9dp"
                android:text="@string/done"
                android:textColor="@color/progress_text"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/text_verif"
                app:layout_constraintTop_toBottomOf="@id/indicator_header" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_lender_personal_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/box_progress">

        <TextView
            android:id="@+id/text_lender_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/text_lender_perso"
            android:textColor="@color/blue_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button_update_data"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/box_rectangle_grey"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:paddingHorizontal="12.5dp"
            android:paddingBottom="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_lender_personal">

            <TextView
                android:id="@+id/text_update_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/inter_regular"
                android:lineHeight="20sp"
                android:text="@string/text_update_perso"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/button_update_data" />

            <ImageView
                android:id="@+id/icon_update"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_information"
                app:layout_constraintLeft_toRightOf="@id/text_update_personal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/button_update_data" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button_change_password"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/box_rectangle_grey"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:paddingHorizontal="12.5dp"
            android:paddingBottom="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_update_data">

            <TextView
                android:id="@+id/text_change_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/inter_regular"
                android:lineHeight="20sp"
                android:text="@string/text_change_pass"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/button_change_password" />

            <!--            <ImageView-->
            <!--                android:id="@+id/ic_info_2"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="18dp"-->
            <!--                android:src="@drawable/ic_information"-->
            <!--                app:layout_constraintLeft_toRightOf="@id/text_change_pwd"-->
            <!--                app:layout_constraintRight_toRightOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="@id/box_data_2" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button_t_n_c"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/box_rectangle_grey"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:paddingHorizontal="12.5dp"
            android:paddingBottom="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_change_password">

            <TextView
                android:id="@+id/text_download_tnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/inter_regular"
                android:lineHeight="20sp"
                android:text="@string/text_download_tnc"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/button_t_n_c" />

            <!--            <ImageView-->
            <!--                android:id="@+id/ic_info_3"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="18dp"-->
            <!--                android:src="@drawable/ic_information"-->
            <!--                app:layout_constraintLeft_toRightOf="@id/text_download_tnc"-->
            <!--                app:layout_constraintRight_toRightOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="@id/box_data_3" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/text_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/text_account"
            android:textColor="@color/blue_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_t_n_c" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonRegister"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/box_rectangle_grey"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:paddingHorizontal="12.5dp"
            android:paddingBottom="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_account">

            <TextView
                android:id="@+id/text_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/inter_regular"
                android:lineHeight="20sp"
                android:text="@string/text_register_as_borrower"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/buttonRegister" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button_logout_verif"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/inter_bold"
            android:text="@string/text_logout"
            android:textAllCaps="false"
            android:textColor="@color/blue_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonRegister" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>