<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.payment.DetailPaymentActivity">

    <View
        android:id="@+id/viewDetailPayment"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_white"
        app:layout_constraintTop_toTopOf="@id/viewDetailPayment"
        app:layout_constraintBottom_toBottomOf="@id/viewDetailPayment"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment"
        app:layout_constraintLeft_toRightOf="@id/ic_back"
        app:layout_constraintTop_toTopOf="@id/viewDetailPayment"
        app:layout_constraintBottom_toBottomOf="@id/viewDetailPayment"
        android:layout_marginLeft="37dp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <View
        android:id="@+id/viewPaymentDeadline"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#FBD961"
        app:layout_constraintTop_toBottomOf="@id/viewDetailPayment"/>
    <TextView
        android:id="@+id/labelPaymentDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/viewPaymentDeadline"
        android:text="Payment deadline"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturday, 13 November 2021, 19:00 (+7)"
        app:layout_constraintTop_toBottomOf="@id/labelPaymentDeadline"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_guide"
        android:layout_width="0dp"
        android:layout_height="89dp"
        app:layout_constraintTop_toBottomOf="@id/viewPaymentDeadline"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:listitem="@layout/adapter_payment_guide"
        android:paddingHorizontal="8dp"/>
    <TextView
        android:id="@+id/tvBca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_guide"
        android:text="BCA Virtual Account"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/blue_primary"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvVAN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvBca"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:text="Virtual Account Number"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/inter_bold"/>
    <TextView
        android:id="@+id/tvvirtualnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvVAN"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="1394837285038294"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/hitam"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvvirtualnumber"
        app:layout_constraintTop_toBottomOf="@id/tvVAN"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/inter_regular"
        android:textSize="14sp"
        android:textColor="@color/blue_primary"/>
    <TextView
        android:id="@+id/tvTagihan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvvirtualnumber"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:text="Payment Nominal"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/inter_bold"/>
    <TextView
        android:id="@+id/tvjumlahtagihan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTagihan"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="50.000"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/hitam"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvjumlahtagihan"
        android:text="Immediately complete the payment before the specified deadline to start funding the startup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/labelPay"
        android:textAlignment="center"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOtherInvesment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/labelPay"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/blue_primary"
        android:text="Other Investments"
        android:textAllCaps="false"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/materialButtonOutlinedStyle"
        app:layout_constraintTop_toBottomOf="@id/btnOtherInvesment"
        android:layout_marginHorizontal="20dp"
        android:text="Check invesment status"
        android:textAllCaps="false"
        android:textColor="@color/blue_primary"/>




</androidx.constraintlayout.widget.ConstraintLayout>